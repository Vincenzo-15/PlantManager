<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="informatica.plantmanager.controller.ActivityFormController"
            styleClass="activity-form-root"
            stylesheets="@../styles/ActivityForm.css">

    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          styleClass="activity-form-container">

        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label text="Crea / Modifica Attività" styleClass="form-title"/>

        <TextField fx:id="titleField"
                   promptText="Titolo attività"
                   styleClass="form-input"/>

        <DatePicker fx:id="datePicker"
                    styleClass="data-picker"/>

        <ComboBox fx:id="plantComboBox"
                  promptText="Seleziona pianta"
                  styleClass="combo-box"/>

        <TextArea fx:id="notesArea"
                  prefRowCount="4"
                  promptText="Note"
                  styleClass="textarea-input"/>

        <HBox spacing="10" styleClass="form-buttons-row">
            <Button fx:id="saveBtn" text="Salva" styleClass="primary-button"/>
            <Button fx:id="cancelBtn" text="Annulla" styleClass="secondary-button"/>
        </HBox>

    </VBox>
</AnchorPane>

